<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/nis_iv_tool"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/description_img_tools"
        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_local_gas_station_24" />

    <com.demo.carspends.utils.ui.ExtendedTextView
        android:id="@+id/nis_tv_title"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="8dp"

        app:layout_constraintBottom_toTopOf="@+id/nis_tv_amount"
        app:layout_constraintEnd_toStartOf="@+id/nis_tv_date"
        app:layout_constraintStart_toEndOf="@+id/nis_iv_tool"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Добавить стиль для "цена"-->
    <com.demo.carspends.utils.ui.ExtendedTextView
        android:id="@+id/nis_tv_amount"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nis_iv_tool"
        app:layout_constraintTop_toBottomOf="@+id/nis_tv_title" />

    <!--Добавить стиль для "дата"-->
    <TextView
        android:id="@+id/nis_tv_date"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_margin="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nis_tv_title"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

