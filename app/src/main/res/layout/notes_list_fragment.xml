<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/nlf_cv_car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"

        android:backgroundTint="@color/light_light_vine"
        android:background="@color/light_light_vine"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nlf_car_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nlf_tv_car_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/nlf_iv_car_info"
                app:layout_constraintBottom_toBottomOf="parent"

                style="@style/carTitleText"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                tools:text="Chevrolet Lacetti"/>

            <ImageView
                android:id="@+id/nlf_iv_car_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_baseline_info_24"

                android:layout_margin="8dp"
                android:contentDescription="@string/description_img_info" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <RelativeLayout
        android:id="@+id/nlf_layout_fuel_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nlf_cv_car_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guide_line"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/nlf_iv_avg_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/nlf_tv_avg_fuel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:srcCompat="@drawable/ic_baseline_local_gas_station_24" />

            <TextView
                android:id="@+id/nlf_tv_avg_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/entryUnitMainMenuText"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nlf_iv_avg_fuel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                tools:text="10.3/100км" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nlf_layout_cost_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nlf_cv_car_name"
        app:layout_constraintStart_toEndOf="@+id/guide_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/nlf_iv_avg_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/nlf_tv_avg_cost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_currency_ruble_24" />

            <TextView
                android:id="@+id/nlf_tv_avg_cost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                style="@style/entryUnitMainMenuText"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nlf_iv_avg_cost"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                tools:text="6.3/км" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <View
        android:id="@+id/nlf_horizontal_div_line_1"
        app:layout_constraintTop_toBottomOf="@+id/nlf_layout_fuel_statistics"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_light_vine"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:id="@+id/nlf_layout_choose_note_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nlf_horizontal_div_line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guide_line"

        android:layout_marginTop="3dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:entries="@array/note_type_values" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nlf_layout_choose_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nlf_horizontal_div_line_1"
        app:layout_constraintStart_toEndOf="@+id/guide_line"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="3dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:entries="@array/date_values"/>

    </RelativeLayout>

    <View
        android:id="@+id/nlf_horizontal_div_line_2"
        app:layout_constraintTop_toBottomOf="@+id/nlf_layout_choose_note_type"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_light_vine"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nlf_rv_notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nlf_horizontal_div_line_2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        tools:listitem="@layout/note_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nlf_fb_add_note"
        style="@style/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/description_add_new_note"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nlf_fb_add_extra"
        style="@style/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/description_add_new_note_extra"

        app:layout_constraintBottom_toTopOf="@+id/nlf_fb_add_note"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_more_horiz_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nlf_fb_add_repair"
        style="@style/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/description_add_new_note_repair"

        app:layout_constraintBottom_toTopOf="@+id/nlf_fb_add_extra"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_build_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nlf_fb_add_filling"
        style="@style/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/description_add_new_note_filling"

        app:layout_constraintBottom_toTopOf="@+id/nlf_fb_add_repair"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_local_gas_station_24" />
</androidx.constraintlayout.widget.ConstraintLayout>