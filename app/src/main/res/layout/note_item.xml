<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingRight="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ni_iv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"

        android:layout_marginHorizontal="10dp"
        android:padding="12dp"
        android:layout_marginVertical="5dp"
        android:elevation="4dp"

        app:layout_constraintEnd_toStartOf="@+id/ni_main_info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ni_iv_tool"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:contentDescription="@string/description_img_tools"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_local_gas_station_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ni_main_info_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/has_pictures_image"
        app:layout_constraintStart_toEndOf="@+id/ni_iv_background"
        app:layout_constraintTop_toTopOf="parent">

        <com.demo.carspends.utils.ui.layoutComponent.ExtendedTextView
            android:id="@+id/ni_tv_title"
            style="@style/itemTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"

            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ni_tv_amount"

            tools:text="Заправка" />

        <!--Добавить стиль для "цена"-->
        <com.demo.carspends.utils.ui.layoutComponent.ExtendedTextView
            android:id="@+id/ni_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/priceText"
            android:ellipsize="end"
            android:maxLines="1"

            app:layout_constraintTop_toBottomOf="@+id/ni_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ni_tv_extra_info"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="2000.10P" />

        <!--Добавить стиль для "доп. информация"-->
        <com.demo.carspends.utils.ui.layoutComponent.ExtendedTextView
            android:id="@+id/ni_tv_extra_info"
            style="@style/extraInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ni_tv_amount"
            app:layout_constraintTop_toBottomOf="@+id/ni_tv_title"

            tools:text="(95й, 41.6л)" />
        <!--Добавить стиль для "заголовков"-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Добавить стиль для "дата"-->

    <ImageView
        android:id="@+id/has_pictures_image"
        android:layout_width="15dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:paddingTop="2dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"

        app:layout_constraintStart_toEndOf="@+id/ni_main_info_layout"
        app:layout_constraintTop_toTopOf="@+id/ni_tv_date"
        app:layout_constraintEnd_toStartOf="@+id/ni_tv_date"
        app:layout_constraintBottom_toBottomOf="@+id/ni_tv_date"


        android:src="@drawable/ic_outline_photo_camera_24"
        app:tint="@color/light_vine"
        android:contentDescription="@string/description_note_has_pictures" />

    <TextView
        android:id="@+id/ni_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/has_pictures_image"

        style="@style/dateText"

        tools:text="11.18.21" />
</androidx.constraintlayout.widget.ConstraintLayout>
