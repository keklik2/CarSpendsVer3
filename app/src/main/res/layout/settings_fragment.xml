<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.demo.carspends.utils.ui.ExtendedTextView
        android:id="@+id/sf_tv_title"
        style="@style/entryTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sf_tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.demo.carspends.utils.ui.ExtendedTextView
                android:id="@+id/sf_font_size_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                style="@style/entryUnitMainMenuText.NotAllCaps"
                android:textAlignment="textStart"

                app:layout_constraintTop_toTopOf="@id/sf_font_size_switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sf_font_size_switch"
                app:layout_constraintBottom_toBottomOf="@+id/sf_font_size_switch"

                android:text="@string/text_font_size_large"/>

            <Switch
                android:id="@+id/sf_font_size_switch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="16dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <com.demo.carspends.utils.ui.ExtendedTextView
                android:id="@+id/sf_tv_statistics_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                app:layout_constraintTop_toTopOf="@+id/sf_statistics_1_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sf_statistics_1_spinner"
                app:layout_constraintBottom_toBottomOf="@id/sf_statistics_1_spinner"
                android:visibility="invisible"

                style="@style/entryUnitMainMenuText.NotAllCaps"
                android:textAlignment="textStart"

                android:text="@string/text_statistics_1"/>

            <Spinner
                android:id="@+id/sf_statistics_1_spinner"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"

                android:entries="@array/statistic_values"
                android:background="@drawable/rounded_rectangle_light_light_vine"
                android:visibility="invisible"

                app:layout_constraintTop_toBottomOf="@+id/sf_font_size_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sf_tv_statistics_1_title"/>

            <com.demo.carspends.utils.ui.ExtendedTextView
                android:id="@+id/sf_tv_statistics_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="invisible"

                app:layout_constraintTop_toTopOf="@+id/sf_statistics_2_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sf_statistics_2_spinner"
                app:layout_constraintBottom_toBottomOf="@id/sf_statistics_2_spinner"

                style="@style/entryUnitMainMenuText.NotAllCaps"
                android:textAlignment="textStart"

                android:text="@string/text_statistics_2"/>

            <Spinner
                android:id="@+id/sf_statistics_2_spinner"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:visibility="invisible"

                android:entries="@array/statistic_values"
                android:background="@drawable/rounded_rectangle_light_light_vine"

                app:layout_constraintTop_toBottomOf="@+id/sf_statistics_1_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sf_tv_statistics_2_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/sf_button_apply"
        style="@style/acceptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
