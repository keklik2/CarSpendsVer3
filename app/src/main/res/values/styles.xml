<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ALL / Button Styles -->
    <style name="floatingButton">
        <item name="backgroundColor">@color/light_light_vine</item>
        <item name="backgroundTint">@color/light_light_vine</item>
    </style>

    <style name="floatingButton.Secondary">
        <item name="backgroundColor">@color/dark_vine</item>
        <item name="backgroundTint">@color/dark_vine</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="acceptButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/light_vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <style name="acceptButtonDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <style name="denyButtonDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>


    <!-- ALL / Text Input Edit Layouts -->
    <style name="inputText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <style name="inputTextLayout">
        <item name="boxBackgroundColor">@color/light_light_vine</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


    <!-- ALL / Text Styles -->
    <style name="entryTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- statistics statements in edit car fragment -->
    <style name="entryUnitText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="entryUnitText.RoundedRectangleBackground">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/rounded_rectangle_light_light_vine</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- statistics statements in main menu fragment -->
    <style name="entryUnitMainMenuText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="entryUnitMainMenuText.White">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- title of car in main menu fragment -->
    <style name="carTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <!-- item title for Note Item in Recycler View -->
    <style name="itemTitleText">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/light_vine</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <!-- price for Note Item in Recycler View -->
    <style name="priceText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>

    <!-- extra info (fuel type) for Note Item in Recycler View -->
    <style name="extraInfoText">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- date for Note & Component Item in Recycler View -->
    <style name="dateText">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dateText.White">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- resource statement for component item in recycler view -->
    <style name="resourceStatementText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- text inside progress bar for Component Item in Recycler View -->
    <style name="progressBarText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inputTextDialog">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="fontFamily">@font/gotham_pro_narrow</item>
    </style>


    <!-- ALL / Bottom Menu Styles -->
    <style name="BottomNavItem" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomNavItem.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>